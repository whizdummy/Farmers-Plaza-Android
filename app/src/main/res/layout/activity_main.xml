<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controllers.general.MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView5"
            android:background="@drawable/avatar"
            android:layout_alignBottom="@+id/btnSignOut"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Layug, Ken"
            android:id="@+id/text_view_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo"
            android:layout_marginLeft="120dp"
            android:contextClickable="true"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_row="0"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@drawable/maps"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Crops"
            android:id="@+id/textView6"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:layout_marginLeft="85dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton4"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/crops"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Maps"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:textAlignment="viewEnd"
            android:textColor="#ffffff"
            android:layout_marginLeft="83dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/income" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Expenses"
            android:id="@+id/textView8"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:layout_marginLeft="78dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton5"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/expenses" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Income"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="83dp"
            android:textColor="#ffffff" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnBrowseFarm"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/farm" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_profile"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/profile"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Farm"
            android:id="@+id/textView7"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:layout_marginLeft="85dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Profile"
            android:id="@+id/textView9"
            android:layout_row="5"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:layout_marginLeft="80dp" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SIGN OUT"
        android:id="@+id/btnSignOut"
        android:textColor="#ffffff"
        android:clickable="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
